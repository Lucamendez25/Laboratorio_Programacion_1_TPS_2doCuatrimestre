float CalcularPromediosAfc(int* afc, int* contadorJugadores)
{
	float promedio;

	promedio= (float)*afc/(*contadorJugadores);
	printf("%.2f\n", promedio);

	return promedio;
}
float CalcularPromediosCaf(int* caf, int* contadorJugadores)
{
	float promedio;

	promedio= (float)*caf/(*contadorJugadores);
	printf("%.2f\n", promedio);

	return promedio;
}
